{% set nextPost = collections.post | getNextCollectionItem(page) %}
{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
<style>
  .c-postNavigation {
    margin-block: var(--space-l-xl);
  }

  .c-postNavigation dl {
    align-items: start;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-m-l);
    justify-content: space-between;
  }

  .c-postNavigation dt {
    font-family: var(--headings);
    font-weight: bold;
  }
</style>
{% if nextPost or previousPost %}
    <div class="wrapper constrain--some">
        <nav aria-label="pagination" class="c-postNavigation">
            <dl>
                {% if nextPost %}
                    <div>
                        <dt class="u-step-1">Next Post:</dt>
                        <dd>
                            <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
                        </dd>
                    </div>
                {% endif %}
                {% if previousPost %}
                    <div>
                        <dt class="u-step-1">Previous Post:</dt>
                        <dd>
                            <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
                        </dd>
                    </div>
                {% endif %}
            </dl>
        </nav>
    </div>
{% endif %}
