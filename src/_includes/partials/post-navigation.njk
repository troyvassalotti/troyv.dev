{% set nextPost = collections.post | getNextCollectionItem(page) %}
{% set previousPost = collections.post | getPreviousCollectionItem(page) %}

<style>
  /* Scoped Styles Here */
</style>

{% if nextPost or previousPost %}
  <aside>
    <dl>
      {% if nextPost %}
        <div>
          <dt>Next Post:</dt>
          <dd><a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></dd>
        </div>
      {% endif %}
      {% if previousPost %}
        <div>
          <dt>Previous Post:</dt>
          <dd><a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></dd>
        </div>
      {% endif %}
    </dl>
  </aside>
{% endif %}
