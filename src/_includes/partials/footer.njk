<footer class="site-footer hideOnPrint" id="site-footer">
    <nav class="footer-navigation" id="footer-navigation" aria-label="footer navigation">
        <ul class="footer-navigation__links">
            {%- for link in nav.footer %}
                <li>
                    <img src="/assets/img/{{ link.name | lower }}.svg" width="24" height="24" alt="{{ link.name }} logo">
                    <a href="{{ link.url }}"
                       class="footer-navigation__link animated-link" {% if link.rel %} rel="{{ link.rel }}" {% endif %}>{{ link.name }}</a>
                </li>
            {% endfor -%}
        </ul>
    </nav>
    <p>Built with <a class="footer-navigation__link animated-link" id="eleventy"
                     href="https://www.11ty.dev">Eleventy</a>. View <a href="https://speedlify.troyv.dev">Speedlify</a> scores.</p>
</footer>