---
title: Posts Archive
description: I occasionally write about things.
"override:layout": null
"override:tags": []
"override:permalink": /archive/
---

{% extends "layouts/base.njk" %}

{% block headScript %}
  <script>{% include "js/loading-spinner.js" %}</script>
{% endblock headScript %}

{% block script %}
  {{ super() }}
  <script type="module">import "/assets/js/tag-cloud.js";</script>
{% endblock script %}

{% block content %}
  <div class="wrapper constrain--more">
    <main id="main">
      <section>
        <header class="u-text--center">
          <h1 class="u-revertMargin--start">{{ title }}</h1>
          <div class="rss u-invertSvg--onDark">
            {# djlint:off #}
            <span>{% include "partials/rss.svg" %}</span>
            {# djlint:on #}
            <span>Subscribe to the <a href="/feed.xml">RSS feed</a>.</span>
          </div>
        </header>
        {% set sortedTags = collections.allTagsList | sort %}
        {% set tags = sortedTags.join(",") %}
        <tag-cloud base="/tags/" tags="{{ sortedTags }}"></tag-cloud>
      </section>
      <section class="posts">
        <ul role="list" class="c-postList flow">
          {% for post in collections.post | reverse %}
            <li>
              <article class="c-postListItem flow">
                <p class="c-postListItem__date">{{ post.date | dateString }}</p>
                <h2 class="c-postListItem__title">
                  <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h2>
              </article>
            </li>
          {% endfor %}
        </ul>
      </section>
    </main>
  </div>
{% endblock content %}

{% block style %}
  {{ super() }}
  <style>
    tag-cloud {
        margin-block: var(--space-l-xl);
    }

    .posts {
        margin-block: var(--space-m-l);
    }

    .c-postList {
        --flow-space: var(--space-s-m);
    }

    .rss {
        align-items: center;
        display: flex;
        gap: 1ch;
        justify-content: center;
    }

    .rss svg {
        max-inline-size: 1em;
    }
  </style>
{% endblock style %}
